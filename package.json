{
  "name": "xtctx",
  "version": "0.3.2",
  "description": "Cross-tool context for AI coding agents",
  "type": "module",
  "bin": {
    "xtctx": "dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle-web": "npm run web:build && npm run web:copy-dist",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest run",
    "test:security": "vitest run tests/api/security.test.ts",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "security:checklist": "node scripts/verify-security-checklist.mjs",
    "lint": "eslint src/ tests/",
    "mcp": "tsx src/mcp/server.ts",
    "api": "tsx src/api/server.ts",
    "web:dev": "npm --prefix web run dev",
    "web:build": "npm --prefix web run build",
    "web:copy-dist": "node scripts/copy-web-dist.mjs",
    "prepack": "npm run build && npm run build:bundle-web",
    "smoke:cli": "node dist/src/cli/index.js --help",
    "verify:release": "npm test && npm run test:security && npm run security:checklist && npm run build && npm run build:bundle-web && npm run smoke:cli"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.13.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@xenova/transformers": "^2.17.2",
    "apache-arrow": "^17.0.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.0",
    "commander": "^13.0.0",
    "express-rate-limit": "^7.5.0",
    "express": "^5.0.0",
    "glob": "^11.0.0",
    "helmet": "^8.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fstubner/xtctx.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "license": "MIT",
  "homepage": "https://xtctx.com"
}
